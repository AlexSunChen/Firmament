/*
	Bouncy ball in a wireframe renderer.
*/

{
	components:{

		//the render component. Specifies which renderer to use, etc.
		render:{
			componentName:tilesheet
			//,image:"assets/images/soccerBall.png"
			,tilesheetFile:"config/tilesheets/testSheet.json"
			,tile:0
		}

		//The physics component.
		,physics:{
			componentName:box2d //name of the component to use. This is usually box2d for physics.
			type:"dynamic"
			,"shapes":[
				{
				"type": "circle"
				,"radius":0.5
				,"restitution":1
				,"density":0.5
				,"friction":0.7
				}	
			]
		}
	}
}


